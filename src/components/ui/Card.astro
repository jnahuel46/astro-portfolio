---
import projectImage from '@assets/images/project.png';
import heroeApp from '@assets/images/heroes.png';
import restServer from '@assets/images/rest-server.png';
import nextCourse from '@assets/images/next-js-course.png';

import { Image } from '@astrojs/image/components';
import Tags from '@components/ui/Tags.astro';
interface Props {
	url?: string;
	alt?: string;
	title?: string;
	description: string;
	tags: string[];
	children?: HTMLElement | HTMLElement[];
	goToRepo?: string;
}

const {
	url = '#',
	alt = 'Project image',
	description = 'Project Description',
	title = 'Project title',
	tags = ['Tags'],
	goToRepo = '#',
} = Astro.props;

const returnImage = (img: string) => {
	if (img === 'heroe') {
		return heroeApp;
	}
	if (img === 'next-js-course') {
		return nextCourse;
	}
	if (img === 'rest-server') {
		return restServer;
	} else {
		return projectImage;
	}
};
---

<section class="w-full p-4 md:w-1/2 lg:w-1/3">
	<article
		data-testId="card"
		class="rounded-xl bg-white p-3 shadow-lg duration-100 hover:scale-105 hover:transform hover:shadow-xl"
	>
		<a href={url} target="_blank" aria-label="link to project">
			<div class="relative flex items-end overflow-hidden rounded-xl">
				<Image
					src={returnImage(alt)}
					alt={alt}
					aspectRatio="4:4"
					format="png"
					width={400}
					height={400}
					loading="eager"
				/>
			</div>
		</a>
		<div class="mt-1 p-2">
			<h3 class="text-xl text-orange lg:text-2xl">{title}</h3>
			<p class="text-s text-black">{description}</p>
			<p class="text-s text-black" style="margin-top: 5px;">
				<a href={goToRepo} target="_blank" aria-label="link to project">Go to repository ðŸš€</a>
			</p>
			<Tags tags={tags} />
		</div>
	</article>
</section>
