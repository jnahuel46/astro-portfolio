---
import heroImage from '@assets/images/engineer3.png';
import { Image } from '@astrojs/image/components';
import Button from '@components/ui/Button.astro';
---

<section
	data-testid="hero"
	class="mb-40 mt-40 flex flex-col-reverse items-center justify-center text-center lg:flex-row"
>
	<div class="mb-10 mr-2 flex flex-col items-center lg:mb-0 lg:w-1/2">
		<div>
			<h1 class="mb-10 font-monospace text-3xl text-black dark:text-white lg:text-5xl">
				Hi! My name is <span class="text-cyan">Jeremias Muriette</span> and I'm a software engineer.
			</h1>
		</div>
		<div class="mb-10">
			<Button style={'primary'} size={'lg'} id={'btn-about-me'} class={'flex'} name="learn more">
				<a
					aria-label="navigation link"
					href={'#about'}
				>
					Learn more
				</a>
			</Button>
		</div>
	</div>
	<div data-testid="hero-img" class="mb-10 ml-2 flex w-1/2 items-center justify-center">
		<Image
			src={heroImage}
			alt="Coding boy"
			aspectRatio="4:4"
			format="png"
			style={'border-radius: 10%'}
			width={700}
			height={500}
			loading="eager"
		/>
	</div>
</section>
